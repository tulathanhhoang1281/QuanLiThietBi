@model QuanLiThietBi.Domain.Models.TblMaintenance

@{
    ViewData["Title"] = "Thêm phiếu bảo trì";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm phiếu bảo trì</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceDate" class="control-label"></label>
                <input asp-for="MaintenanceDate" class="form-control" />
                <span asp-validation-for="MaintenanceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignTo" class="control-label"></label>
                <input asp-for="AssignTo" class="form-control" />
                <span asp-validation-for="AssignTo" class="text-danger"></span>
            </div>
            <div class="form-group" method="post">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>