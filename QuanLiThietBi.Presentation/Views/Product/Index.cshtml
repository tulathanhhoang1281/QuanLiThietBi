@model IEnumerable<QuanLiThietBi.Domain.Models.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h1>Quản lý sản phẩm</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm sản phẩm</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Danh mục</th>
            <th>Model</th>
            <th>Nhà sản xuất</th>
            <th>Số serial</th>
            <th>Ngày mua</th>
            <th>Hạn bảo hành</th>
            <th>Trạng thái</th>
            <th>Vị trí</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                <td>@item.Model</td>
                <td>@item.Manufacturer</td>
                <td>@item.SerialNumber</td>
                <td>@item.PurchaseDate.ToString("dd/MM/yyyy")</td>
                <td>@item.WarrantyEndDate.ToString("dd/MM/yyyy")</td>
                <td>@item.Status</td>
                <td>@item.Location.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProductId">Sửa</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
    }

    h1 {
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        border: 1px solid #ddd;
    }

    .btn {
        margin-right: 10px;
    }

    #btnAdd {
        margin-bottom: 10px;
    }

    .table-striped tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>
<script>
    const btnAdd = document.getElementById('btnAdd');
    const tblProducts = document.getElementById('tblProducts');

    btnAdd.addEventListener('click', () => {
    });

    const renderProducts = (products) => {
        tblProducts.innerHTML = "";
        products.forEach((product) => {
            const row = `
                    <tr>
                        <td>${product.name}</td>
                        <td>${product.price}</td>
                        <td>${product.quantity}</td>
                        <td>${product.description}</td>
                        <td>
                            <button class="btn btn-primary">Sửa</button>
                            <button class="btn btn-danger">Xóa</button>
                        </td>
                    </tr>
                `;
            tblProducts.innerHTML += row;
        });
    };

    // Lấy danh sách sản phẩm và hiển thị
    fetch('/api/products')
        .then((response) => response.json())
        .then((data) => renderProducts(data));
</script>